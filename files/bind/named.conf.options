acl clients {
  localhost;
  localnets;
};

options {

  directory "/var/cache/bind";

  recursion yes;
  allow-query { clients; };
  allow-recursion { clients; };

  forwarders {
    # dns.watch
    8.8.8.8;
    8.8.4.4;
  };

  dnssec-enable yes; 
  dnssec-validation auto;

  auth-nxdomain no;
  listen-on { 127.0.0.1; };

};
